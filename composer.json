{
    "name": "devium/escapers",
    "version": "1.0.0",
    "description": "Useful escapers",
    "keywords": ["escape", "html", "markdown", "telegram"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vano Devium",
            "email": "vano@devium.me"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.17.3",
        "pestphp/pest": "^2.35.1",
        "phpstan/phpstan": "^1.12.2",
        "rector/rector": "^1.2.4",
        "symfony/var-dumper": "^6.4|^7.1.4"
    },
    "autoload": {
        "psr-4": {
            "Devium\\Escapers\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "pint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi src",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
